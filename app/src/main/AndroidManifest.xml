<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.skyreach">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"></activity>
        <activity android:name=".Links" />
        <activity android:name=".Achievements_List_item" />
        <activity
            android:name=".main_page"
            android:screenOrientation="locked"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Bottom_Navigation"
            android:screenOrientation="locked" />
        <activity android:name=".Forget_Password" />
        <activity
            android:name=".Side_Navigation"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Sign_in"
            android:screenOrientation="locked" />
        <activity
            android:name=".signup"
            android:screenOrientation="locked" />
    </application>

</manifest>